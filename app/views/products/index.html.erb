<p id="notice"><%= notice %></p>

<h1>Products</h1>
<div style="float:right">
  <%= form_for(:filter_products, url: products_path , method: :get) do |form| %>
    <p> Filter based on catogary</p>
    <%= form.collection_select :catagory_id, ProductCategory.order(:name),:id,:name ,:prompt => "Select"%>
    <%= form.submit "Filter" %>
  <% end  %>
</div>




<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Tags</th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr scope="row">
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.tags.map { |t| t.name }.join(",") %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

